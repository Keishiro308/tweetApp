<%= provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <h1><%= @user.name %></h1>
    <span><%= image_tag @user.user_image.url || '/assets/images/default.jpg' %></span>

  </div>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
